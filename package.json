{
  "name": "habit-stitch",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "pnpm type-check && pnpm build-only",
    "preview": "pnpm build && vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "deploy-app": "pnpm build && wrangler deploy",
    "db:create-local": "wrangler d1 execute habit-stitch-db --local --command=\"SELECT 1\"",
    "db:push-changes": "pnpm drizzle-kit push",
    "db:generate-migrations": "pnpm drizzle-kit generate",
    "db:apply-migrations": "wrangler d1 migrations apply habit-stitch-db",
    "drizzle:studio": "pnpm drizzle-kit studio"
  },
  "dependencies": {
    "@types/vue-feather-icons": "^5.0.8",
    "bcryptjs": "^3.0.2",
    "drizzle-orm": "^0.44.5",
    "drizzle-seed": "^0.3.1",
    "drizzle-zod": "^0.8.3",
    "feather-icons": "^4.29.2",
    "hono": "^4.9.6",
    "pocketbase": "^0.26.2",
    "tinygradient": "^2.0.1",
    "vue": "^3.5.21",
    "vue-feather-icons": "^5.1.0",
    "vue-router": "^4.5.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.12.4",
    "@libsql/client": "^0.15.15",
    "@tsconfig/node22": "^22.0.2",
    "@types/bcrypt": "^6.0.0",
    "@types/feather-icons": "^4.29.4",
    "@types/node": "^22.18.1",
    "@vite-pwa/assets-generator": "^1.0.1",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/tsconfig": "^0.7.0",
    "dotenv": "^17.2.2",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.35.0",
    "eslint-plugin-vue": "~10.0.1",
    "jiti": "^2.5.1",
    "npm-run-all2": "^7.0.2",
    "prettier": "3.5.3",
    "typescript": "~5.8.3",
    "vite": "^6.3.6",
    "vite-plugin-pwa": "^1.0.3",
    "vite-plugin-vue-devtools": "^7.7.7",
    "vue-tsc": "^2.2.12"
  }
}
